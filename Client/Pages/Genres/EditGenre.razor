@page "/genre/edit/{GenreId:int}"

<h3>EditGenre</h3>

@if (genre != null)
{
  <GenreForm Genre="genre" OnValidSubmit="Edit" />

}

@code {
  [Parameter]
  public int GenreId { get; set; }
  public Genre genre;

  protected override void OnInitialized()
  {
    genre = new Genre() { Id = GenreId, Name = "Horror" };
  }

  private void Edit()
  {
    System.Console.WriteLine("Edit method");
    System.Console.WriteLine($"Id = {genre.Id}");
    System.Console.WriteLine($"Name = {genre.Name}");
  }
}
